extends layout

block content
  h1= title
  p Welcome to #{title}
  form(name="headerGen", id="headerGen", onsubmit="generateHeader()", style="font-family: LatoWebSemibold;")
    table
      tr
        td
          table
            tr
              td
                p First Name
              td
                input(id="firstName" name="firstName")
            tr
              td
                p Last name
              td
                input(id="lastName" name="lastName")
            tr
              td
                p Title
              td
                input(id="jobTitle" name="jobTitle")
            tr
              td
                p Slogan
              td
                input(id="personalSlogan" name="personalSlogan")
            tr
              td
                p Phone Number
              td
                input(id="phoneNumber" name="phoneNumber")
        td
          table
            tr
              td
                p Website Address
              td
                input(id="webAddr" name="webAddr")
            tr
              td
                p Facebook Address
              td
                input(id="fbAddr" name="fbAddr")
            tr
              td
                p Twitter Address
              td
                input(id="twitterAddr" name="twitterAddr")
            tr
              td
                p Linkedin Address
              td
                input(id="liAddr" name="liAddr")
            tr
              td
                p Youtube Address
              td
                input(id="ytAddr" name="ytAddr")
      tr
        td
          p Headshot Photo
        td
          input(type="file" accept="image/*" id="headPhoto" name="headPhoto" onchange="loadHeadshot(event)")
      tr
        td
          p Headshot Preview:
        td
          img#headshotPreview(style="max-width: 100px; max-height: 150px;")
      tr
        td
          p Company Logo
        td
          input(type="file" accept="image/*" id="coLogo" name="coLogo" onchange="loadLogo(event)")
      tr
        td
          p Logo Preview:
        td
          img#logoPreview(style="max-width: 200px; max-height: 150px;")
      tr
        td
          p Background Image
        td
          div#bgDrop
      tr
        td
          p Color Scheme
        td
          div#clrDrop
      tr
        td
          input(type="button", id="submitButton", value="Generate Header", onClick="generateHeader()")
  <canvas id="header" width="580px" height="387px"></canvas>
  div(style="font-family: LatoWebMedium")
    div(style="font-family: LatoWebSemibold")
      div(style="font-family: LatoWebThin")
        div(style="font-family: LatoWeb")
          div(style="font-family: LatoWebLight")
            div(style="font-family: LatoWebHeavy")
              div(style="font-family: LatoWebHairline")
                div(style="font-family: LatoWebBold")